{
  "name": "codesnap-clone",
  "displayName": "codesnap-clone",
  "description": "Take Beautiful Screenshot of your code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
  "onCommand:codesnap-clone.snap"
],
  "main": "./out/extension.js",
  "contributes": {
  "commands": [
    {
      "command": "codesnap-clone.snap",
      "title": "CodeSnap: Take Screenshot"
    }
  ],
  "configuration": {
    "title": "CodeSnap Clone",
    "properties": {
      "codesnap-clone.backgroundColor": {
        "type": "string",
        "default": "#ABB8C3",
        "description": "Background color of the screenshot container"
      },
      "codesnap-clone.showWindowControls": {
        "type": "boolean",
        "default": true,
        "description": "Show macOS-style window control buttons"
      },
      "codesnap-clone.fontFamily": {
        "type": "string",
        "default": "JetBrains Mono, monospace",
        "description": "Font family for the code"
      },
      "codesnap-clone.fontSize": {
        "type": "number",
        "default": 14,
        "description": "Font size in pixels"
      },
      "codesnap-clone.lineNumbers": {
        "type": "boolean",
        "default": true,
        "description": "Show line numbers"
      }
    }
  },
  "keybindings": [
    {
      "command": "codesnap-clone.snap",
      "key": "ctrl+shift+s",
      "mac": "cmd+shift+s",
      "when": "editorTextFocus"
    }
  ],
  "menus": {
    "editor/context": [
      {
        "command": "codesnap-clone.snap",
        "group": "navigation"
      }
    ]
  }
},
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
